{
  "expo": {
    "name": "CrushTip",
    "slug": "crush-tip-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "crushtipmobile",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": false,
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "CrushTip can truy cap thu vien anh de ban chon anh chup man hinh chat."
      },
      "bundleIdentifier": "com.fromsunnews.crushtipmobile"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#FF6B6B",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.fromsunnews.crushtipmobile"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#FFFAF9"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "CrushTip can truy cap thu vien anh de ban chon anh chup man hinh chat."
        }
      ],
      "expo-localization",
      [
        "expo-share-intent",
        {
          "iosActivationRules": {
            "NSExtensionActivationSupportsImageWithMaxCount": 1
          },
          "androidIntentFilters": [
            "image/*"
          ]
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
