{
  "name": "crush-tip",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:be": "turbo run dev --filter=crush-tip-be",
    "dev:mobile": "turbo run dev --filter=crush-tip-mobile",
    "dev:landing": "turbo run dev --filter=crush-tip-fe-new",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.8.3",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
